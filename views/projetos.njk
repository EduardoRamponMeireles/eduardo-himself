{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Pojetos</h1>
    </div>

    <section class="cards">
   
        {% for item in itens%}
        <div class="card">
            <div class="card__content">
                <div class="card__content-img">
                    <img src="{{ item.avatar_img }}" alt="">
                </div>
                <p>{{ item.title }}</p>
            </div>

            <div class="card__info">
                <p>{{ item.description }}</p>
            </div>
            <div class="card__access">
                <a href="{{ item.access_link }}">Acessar</a>
            </div>
        </div>
        {% endfor %}
    

    </section>
    


     <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
             <div class="modal-content">

                <iframe src="https://www.youtube.com/watch?v=9XvXF1LrWgA" frameborder="0"></iframe>
                
             </div>
        </div>
    </div> 
    <script src="script.js"></script>   
{% endblock %}
